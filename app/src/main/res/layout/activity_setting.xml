<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/TitleStyle"
        android:text="设置中心" />

    <com.itheima.mobilesafe.view.SettingItemView
        xmlns:mobilesafe="http://schemas.android.com/apk/res/com.itheima.mobilesafe"
        android:id="@+id/siv_update"
        mobilesafe:des_title="是否自动更新"
        mobilesafe:des_off="自动更新关闭"
        mobilesafe:des_on="自动更新开启"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.itheima.mobilesafe.view.SettingItemView
        xmlns:mobilesafe="http://schemas.android.com/apk/res/com.itheima.mobilesafe"
        android:id="@+id/siv_phone_address"
        mobilesafe:des_title="电话归属地显示设置"
        mobilesafe:des_off="归属地显示关闭"
        mobilesafe:des_on="归属地显示开启"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.itheima.mobilesafe.view.SettingClickView
        android:id="@+id/scv_toast_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.itheima.mobilesafe.view.SettingClickView
        android:id="@+id/scv_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
